  <div class="heading text-center font-bold text-2xl m-5 text-gray-800">New Post</div>
<form class="new-post-form">
  <div class="editor rounded-lg bg-white mx-auto w-10/12 flex flex-col text-gray-800 border border-gray-300 p-4 shadow-lg max-w-2xl">
    <input class="rounded-lg  bg-gray-100 border border-gray-300 p-2 mb-4 outline-none" spellcheck="false" placeholder="Title" type="text" id="post-title" name="post-title" >
    <textarea class="rounded-lg  bg-gray-100 sec p-3 h-60 border border-gray-300 outline-none" spellcheck="false" placeholder="Describe everything about this post here" id="post-text" name="post-text"></textarea>
    <!-- buttons -->
    <div class="grid justify-items-end">
      <button type="submit" class=" border rounded-lg  m-2 border-indigo-500 p-1 px-4 font-semibold cursor-pointer text-gray-200 ml-2 bg-indigo-500 hover:bg-indigo-700">Add post</button>
    </div>
    </form>
  </div>



  {{#if posts.length}}
 
    <div class="flex-col">
      <section>
        <h2>Your Posts</h2>
        <ol>
          {{#each posts as |post|}}
          <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
          </li>
          {{/each}}
        </ol>
      </section>
    </div>

    {{/if}}
  </div>

  <script src="/javascript/add-post.js"></script>