
{{#each this}}
<div class="flex-col max-w-4xl px-10 my-4 py-6 bg-white rounded-lg shadow-md">
    <div class="flex justify-between items-center">
      
        <span class="font-light text-gray-600">{{format_date created_at}}</span>
        <p class="px-2 py-1 bg-gray-600 text-gray-100 font-bold rounded" >Comment</p>
    </div>
    <div class="flex justify-between items-center mt-4">
        <div class="flex items-center">
                <img class="mx-4 w-10 h-10 object-cover rounded-full hidden sm:block"
                    src="https://www.bsn.eu/wp-content/uploads/2016/12/user-icon-image-placeholder.jpg?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=373&q=80"
                    alt="avatar">
                <h1 class="text-gray-700 font-bold">{{user.username}}</h1>
                <h1 class="text-gray-600"> : {{comment_text}}</h1>
        </div>
    </div>
</div>
{{/each}}