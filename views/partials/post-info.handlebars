
<div class="max-w-4xl px-10 my-4 py-6 bg-white rounded-lg shadow-md">
    <div class="flex justify-between items-center">
        <span class="font-light text-gray-600">{{format_date created_at}}</span>
        <a class="px-2 py-1 bg-gray-600 text-gray-100 font-bold rounded hover:bg-gray-500" href="#">Post</a>
    </div>
    <div class="mt-2">
        <a class="text-2xl text-gray-700 font-bold hover:text-gray-600" href="{{post_text}}" target="_blank">{{title}}
            </a>
        <p class="mt-2 text-gray-600">{{post_text}}</p>
    </div>
    <div class="flex justify-between items-center mt-4">
        <a class="text-blue-600 hover:underline" href="#">Read more</a>
        <div>
            <a class="flex items-center" href="{{post_text}}">
                <img class="mx-4 w-10 h-10 object-cover rounded-full hidden sm:block"
                    src="https://www.bsn.eu/wp-content/uploads/2016/12/user-icon-image-placeholder.jpg?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=373&q=80"
                    alt="avatar">
                <h1 class="text-gray-700 font-bold">{{user.username}}</h1>
            </a>
        </div>
    </div>
</div>


